<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48C072"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/playerCard1"
        android:layout_width="75dp"
        android:layout_height="100dp"
        />

    <ImageView
        android:id="@+id/playerCard2"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/playerCard1"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:id="@+id/playerCard3"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/playerCard2"
        android:layout_marginLeft="10dp"

        />

    <ImageView
        android:id="@+id/playerCard4"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/playerCard3"
        android:layout_marginLeft="10dp"

        />

    <ImageView
        android:id="@+id/playerCard5"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/playerCard4"
        android:layout_marginLeft="10dp"

        />

    <TextView
        android:id="@+id/playerTotal"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/playerCard2"
        android:layout_below="@id/playerCard3"
        android:layout_marginTop="20dp"
        android:background="#99ccff"
        android:textSize="30dp"
        android:gravity="center"
        />





    <ImageView
        android:id="@+id/dealerCard1"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_below="@id/playerCard1"
        android:layout_marginTop="150dp"
        />

    <ImageView
        android:id="@+id/dealerCard2"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/dealerCard1"
        android:layout_below="@id/playerCard2"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:id="@+id/dealerCard3"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/dealerCard2"
        android:layout_below="@id/playerCard3"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"

        />

    <ImageView
        android:id="@+id/dealerCard4"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/dealerCard3"
        android:layout_below="@id/playerCard4"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"

        />

    <ImageView
        android:id="@+id/dealerCard5"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/dealerCard4"
        android:layout_below="@id/playerCard5"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="10dp"

        />

    <TextView
        android:id="@+id/dealerTotal"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/dealerCard2"
        android:layout_below="@id/dealerCard3"
        android:layout_marginTop="20dp"
        android:background="#99ccff"
        android:textSize="30dp"
        android:gravity="center"

        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hit"
        android:layout_marginTop="50dp"
        android:layout_below="@id/dealerTotal"
        android:layout_marginLeft="50dp"
        android:text="Hit"
        android:onClick="getCard"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stand"
        android:layout_toRightOf="@id/hit"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/dealerTotal"
        android:text="Stand"
        android:onClick="stand"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/stand"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/dealerTotal"
        android:text="New Game"
        android:onClick="newGame"
        />

    <TextView
        android:id="@+id/status"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/stand"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:background="#99ccff"
        android:textSize="20dp"
        android:gravity="center"

        />



</RelativeLayout>